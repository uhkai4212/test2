        if open then
            accordion.Size = UDim2.new(1, 0, 0, 36 + content.AbsoluteSize.Y)
        else
            accordion.Size = UDim2.new(1, 0, 0, 36)
        end
    end
    
    -- Update size when content changes
    listLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        if open then
