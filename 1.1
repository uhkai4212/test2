-- Helper Functions
local function CreateInstance(className, properties)
local instance = Instance.new(className)
for k, v in pairs(properties) do
instance[k] = v
end
return instance
end
local function AddRoundedCorners(frame, radius)
local corner = CreateInstance("UICorner", {
